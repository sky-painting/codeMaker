<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lightsnail.schoolmanager.mapper.ClassTeacherMapper">


    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.lightsnail.schoolmanager.entity.ClassTeacherEntity">
        <result column="id" property="id" />
        <result column="class_id" property="classId" />
        <result column="teacher_id" property="teacherId" />
    </resultMap>


    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
            id,
            class_id,
            teacher_id,
    </sql>

    <insert id="insert" parameterType="com.lightsnail.schoolmanager.entity.ClassTeacherEntity">
        insert into class_teacher(
            id,
            class_id,
            teacher_id,
        )
        values(
            #{id},
            #{classId},
            #{teacherId},
        )
    </insert>

    <update id="update" parameterType="com.lightsnail.schoolmanager.entity.ClassTeacherEntity">
        update class_teacher
        set
            id=#{id},
            class_id=#{classId},
            teacher_id=#{teacherId},
        where  id = #{id}
    </update>

    <select id="getAll" resultType="com.lightsnail.schoolmanager.entity.ClassTeacherEntity">
        select <include refid="Base_Column_List" />  from class_teacher
    </select>

    <select id="getById" parameterType="com.lightsnail.schoolmanager.entity.ClassTeacherEntity"
            resultType="com.lightsnail.schoolmanager.entity.ClassTeacherEntity">
        select <include refid="Base_Column_List" /> from class_teacher  where id = #{id}
    </select>

    <delete id="deleteById" >
        delete from class_teacher where id = #{id}
    </delete>

</mapper>
