<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.coderman.infosys.auth.dao.mapper.TeacherMapper">


    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.coderman.infosys.auth.dao.dataobject.TeacherDO">
        <result column="id" property="id" />
        <result column="teacher_name" property="teacherName" />
        <result column="age" property="age" />
        <result column="sex" property="sex" />
    </resultMap>


    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,teacher_name,age,sex
    </sql>

    <insert id="insert" parameterType="com.coderman.infosys.auth.dao.dataobject.TeacherDO">
        insert into teacher(
        teacher_name,age,sex
        )
        values(
        #{teacher_name},#{age},#{sex}
        )
    </insert>

    <update id="update" parameterType="com.coderman.infosys.auth.dao.dataobject.TeacherDO">
        update teacher
        set
        teacher_name=#{teacher_name},age=#{age},sex=#{sex}
        where  id = #{id}
    </update>

    <select id="getAll" resultType="com.coderman.infosys.auth.dao.dataobject.TeacherDO">
        select <include refid="Base_Column_List" />  from teacher
    </select>

    <select id="getById" parameterType="com.coderman.infosys.auth.dao.dataobject.TeacherDO"
            resultType="com.coderman.infosys.auth.dao.dataobject.TeacherDO">
        select <include refid="Base_Column_List" /> from teacher  where id = #{id}
    </select>

    <delete id="deleteById" >
        delete from teacher where id = #{id}
    </delete>

    <select id="getPageList" resultType="com.coderman.infosys.auth.dao.dataobject.TeacherDO">
        select <include refid="Base_Column_List" />  from teacher
    </select>

</mapper>
