<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lightsnail.schoolmanager.mapper.TeacherMapper">


    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.lightsnail.schoolmanager.entity.TeacherEntity">
        <result column="id" property="id" />
        <result column="teacher_name" property="teacherName" />
        <result column="age" property="age" />
        <result column="sex" property="sex" />
    </resultMap>


    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
            id,
            teacher_name,
            age,
            sex,
    </sql>

    <insert id="insert" parameterType="com.lightsnail.schoolmanager.entity.TeacherEntity">
        insert into teacher(
            id,
            teacher_name,
            age,
            sex,
        )
        values(
            #{id},
            #{teacherName},
            #{age},
            #{sex},
        )
    </insert>

    <update id="update" parameterType="com.lightsnail.schoolmanager.entity.TeacherEntity">
        update teacher
        set
            id=#{id},
            teacher_name=#{teacherName},
            age=#{age},
            sex=#{sex},
        where  id = #{id}
    </update>

    <select id="getAll" resultType="com.lightsnail.schoolmanager.entity.TeacherEntity">
        select <include refid="Base_Column_List" />  from teacher
    </select>

    <select id="getById" parameterType="com.lightsnail.schoolmanager.entity.TeacherEntity"
            resultType="com.lightsnail.schoolmanager.entity.TeacherEntity">
        select <include refid="Base_Column_List" /> from teacher  where id = #{id}
    </select>

    <delete id="deleteById" >
        delete from teacher where id = #{id}
    </delete>

</mapper>
